function data2blob(data, isBase64) {
    var chars = "";
    if (isBase64)
        chars = atob(data);
    else
        chars = data;
    var bytes = new Array(chars.length);
    for (var i = 0; i < chars.length; i++)
        bytes[i] = chars.charCodeAt(i);
    var blob = new Blob([new Uint8Array(bytes)]);
    return blob;
}

