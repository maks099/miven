					$('.selectStudents').css('display', 'none');
				}else if($("#select_group").val() !== "" && $("#select_students").val() !== ""){
					$('.selectType').css('display', 'block');
					
				}



			}




			
		}


		function saveToValue($elem,$vals,$type){
			//alert($vals);
			if($type == "number"){
				$($elem).attr('value', $vals);	
			}else if($type == "text"){
				$($elem).attr('value', $vals);
				$($elem).text($vals);
			}

			

		}
