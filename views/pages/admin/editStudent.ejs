					  $("#type_radio_text").parent().css('border', '1px solid #E7E9EB');
					}, 3000);
				}

			}else if($vals == 'addToForm'){

				if( $('#nameField').val() !== ""){

					$('.selectType').css('display', 'none');
					$('.inputData').css('display', 'none');
					$('.myBlockForm').css('display', 'block');

					$name_fiels = $('#nameField').val();
